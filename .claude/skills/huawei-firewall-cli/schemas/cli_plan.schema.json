{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["protocol", "device", "commands", "missing_fields"],
  "properties": {
    "protocol": {"type": "string", "minLength": 1},
    "device": {"type": "string", "minLength": 1},
    "assumptions": {"type": "array", "items": {"type": "string"}},
    "missing_fields": {"type": "array", "items": {"type": "string"}},
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["cmd", "purpose", "refs"],
        "properties": {
          "cmd": {"type": "string", "minLength": 1},
          "purpose": {"type": "string", "minLength": 1},
          "refs": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["source", "section", "title"],
              "properties": {
                "source": {"type": "string"},
                "section": {"type": "string"},
                "title": {"type": "string"},
                "page": {"type": "string"}
              }
            }
          }
        }
      }
    }
  }
}
